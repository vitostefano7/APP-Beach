@startuml
skinparam Style strictuml
skinparam sequence {
  ParticipantPadding 30
  MessageAlign center
}

title POST /from-booking/:bookingId

actor Client
participant "Express Router" as Router
participant "requireAuth" as requireAuth
participant "createMatchFromBooking" as Controller
database MongoDB

Client -> Router: POST /from-booking/:bookingId
activate Router
Router -> requireAuth: execute
activate requireAuth
requireAuth --> Router: next()
deactivate requireAuth
Router -> Controller: createMatchFromBooking()
activate Controller

autonumber
Controller -> MongoDB: Booking.find()
MongoDB --> Controller: result
Controller -> MongoDB: Match.find()
MongoDB --> Controller: result
Controller -> MongoDB: Match.create()
MongoDB --> Controller: result
note over Controller: Validate Input / Check Existence

alt success
  Controller --> Client: res.json(data)
else catch (error)
  Controller --> Client: res.status(500)
end

deactivate Controller
Router --> Client: HTTP Response
deactivate Router
@enduml
