@startuml
skinparam Style strictuml
skinparam sequence {
  ParticipantPadding 30
  MessageAlign center
}

title GET /:id

actor Client
participant "Express Router" as Router
participant "getStrutturaById" as Controller
database MongoDB

Client -> Router: GET /:id
activate Router
Router -> Controller: getStrutturaById()
activate Controller

autonumber
Controller -> MongoDB: Struttura.find()
MongoDB --> Controller: result
note over Controller: Validate Input / Check Existence

alt success
  Controller --> Client: res.json(data)
else catch (error)
  Controller --> Client: res.status(500)
end

deactivate Controller
Router --> Client: HTTP Response
deactivate Router
@enduml
