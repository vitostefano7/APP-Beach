@startuml
skinparam Style strictuml
skinparam sequence {
  ParticipantPadding 30
  MessageAlign center
}

title PUT /preferences

actor Client
participant "Express Router" as Router
participant "requireAuth" as requireAuth
participant "updateUserPreferences" as Controller
database MongoDB

Client -> Router: PUT /preferences
activate Router
Router -> requireAuth: execute
activate requireAuth
requireAuth --> Router: next()
deactivate requireAuth
Router -> Controller: updateUserPreferences()
activate Controller

autonumber
Controller -> MongoDB: UserPreferences.find()
MongoDB --> Controller: result
note over Controller: Initialize new UserPreferences

alt success
  Controller --> Client: res.json(data)
else catch (error)
  Controller --> Client: res.status(500)
end

deactivate Controller
Router --> Client: HTTP Response
deactivate Router
@enduml
