@startuml
skinparam Style strictuml
skinparam sequence {
  ParticipantPadding 30
  MessageAlign center
}

title GET /struttura/:id

actor Client
participant "Express Router" as Router
participant "getCampiByStruttura" as Controller
database MongoDB

Client -> Router: GET /struttura/:id
activate Router
Router -> Controller: getCampiByStruttura()
activate Controller

autonumber
Controller -> MongoDB: Campo.find()
MongoDB --> Controller: result

alt success
  Controller --> Client: res.json(data)
else catch (error)
  Controller --> Client: res.status(500)
end

deactivate Controller
Router --> Client: HTTP Response
deactivate Router
@enduml
