@startuml
skinparam Style strictuml
skinparam sequence {
  ParticipantPadding 30
  MessageAlign center
}

title GET /bookings

actor Client
participant "Express Router" as Router
participant "getOwnerBookings" as Controller
database MongoDB

Client -> Router: GET /bookings
activate Router
Router -> Controller: getOwnerBookings()
activate Controller

autonumber
Controller -> MongoDB: Booking.find()
MongoDB --> Controller: result

alt success
  Controller --> Client: res.json(data)
else catch (error)
  Controller --> Client: res.status(500)
end

deactivate Controller
Router --> Client: HTTP Response
deactivate Router
@enduml
