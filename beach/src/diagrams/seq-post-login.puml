@startuml
skinparam Style strictuml
skinparam sequence {
  ParticipantPadding 30
  MessageAlign center
}

title POST /login

actor Client
participant "Express Router" as Router
participant "login" as Controller
database MongoDB

Client -> Router: POST /login
activate Router
Router -> Controller: login()
activate Controller

autonumber
Controller -> MongoDB: User.find()
MongoDB --> Controller: result
note over Controller: Validate Input / Check Existence

alt success
  Controller --> Client: res.json(data)
else catch (error)
  Controller --> Client: res.status(500)
end

deactivate Controller
Router --> Client: HTTP Response
deactivate Router
@enduml
