@startuml
skinparam Style strictuml
skinparam sequence {
  ParticipantPadding 30
  MessageAlign center
}

title GET /strutture

actor Client
participant "Express Router" as Router
participant "getMyStrutture" as Controller
database MongoDB

Client -> Router: GET /strutture
activate Router
Router -> Controller: getMyStrutture()
activate Controller

autonumber
Controller -> MongoDB: Strutture.find()
MongoDB --> Controller: result

alt success
  Controller --> Client: res.json(data)
else catch (error)
  Controller --> Client: res.status(500)
end

deactivate Controller
Router --> Client: HTTP Response
deactivate Router
@enduml
